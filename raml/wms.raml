      body:
        application/json:
          schema: Picklist
      responses:
        200:
          body:
            application/json:
              schema: Picklist
        404:
          body:
            application/json:
              schema: Error
    delete:
      description: Delete a Picklist by ID
      responses:
        204:
        404:
