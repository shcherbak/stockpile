        displayName: Start Date
        type: date
        description: Start date
        example: 2017-01-01
        required: false
        default: 2017-01-01
      edate:
        displayName: End Date
        type: date
        description: End date
        example: 2017-01-01
        required: false
        default: 2017-01-10
      facility:
        displayName: Facility
        type: string
        description: Facility code
        example: A1
        required: false
        default: A1
    responses:
